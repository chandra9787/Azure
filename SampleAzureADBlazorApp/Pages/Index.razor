@page "/"
<AuthorizeView>
    <Authorized>
        <h1> Hello, @context.User.Identity.Name!</h1>


        <table class="table-hover table-condensed table-striped">
            <tr>
                <th>Claim Type</th>
                <th>Claim Value</th>
            </tr>
            @foreach (var claim in context.User.Claims)
            {
                <tr>
                    <td>@claim.Type</td>
                    <td>@claim.Value</td>
                </tr>
            }
        </table>
    </Authorized>
</AuthorizeView>
